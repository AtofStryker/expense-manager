    "@nivo/bar": "^0.61.1",
    "@nivo/line": "^0.61.1",
    "@nivo/pie": "^0.61.1",
    "@nivo/sunburst": "^0.61.0",
    "@siegrift/tsfunct": "^1.4.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.8.1",
    "firebase": "^7.6.1",
    "lodash": "^4.17.15",
    "mathjs-expression-parser": "^1.0.2",
    "next": "9.1.6",
    "next-offline": "5.0.0-beta.8",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-google-button": "^0.7.0",
    "react-icons": "^3.8.0",
    "react-number-format": "^4.3.1",
    "react-redux": "^7.1.3",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.1.7",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/lodash": "^4.14.149",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.every": "^4.6.6",
    "@types/lodash.range": "^3.2.6",
    "@types/node": "^13.1.1",
    "@types/react": "^16.9.17",
    "@types/react-redux": "^7.1.5",
    "@types/react-select": "^3.0.8",
    "@types/react-test-renderer": "^16.9.1",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.1",
    "@types/redux-logger": "^3.0.7",
    "@types/uuid": "^3.4.6",
    "cross-env": "^6.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "firebase-mock": "^2.3.1",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "mockdate": "^2.0.5",
