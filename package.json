{
  "engines": {
    "node": "12.x"
  },
  "name": "expense-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "deploy": "yarn build && now --prod",
    "dev": "next dev",
    "check-eslint": "eslint --print-config pages/index.js | eslint-config-prettier-check",
    "run-eslint": "eslint \"lib/**\" \"pages/**\" \"cypress/integration/**\"",
    "lint": "yarn check-eslint && prettier --check \"@(lib|pages)/**/*.tsx\" && yarn run-eslint",
    "lint:fix": "prettier --write \"@(lib|pages)/**/*.tsx\" \"@(lib|pages)/**/*.ts\" && yarn run-eslint --fix",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest",
    "test:unit-coverage": "jest --coverage",
    "test:unit-update": "jest --updateSnapshot",
    "test:unit-ui": "majestic",
    "test:unit-watch": "jest --watch",
    "test:e2e-start-server": "next dev -p 3999",
    "test:e2e-run": "cypress run",
    "test:e2e-open": "cypress open",
    "test:e2e": "start-server-and-test 'yarn test:e2e-start-server' http://localhost:3999 'yarn test:e2e-run'",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.9.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.42",
    "@material-ui/pickers": "^3.2.9",
    "@nivo/bar": "^0.61.1",
    "@nivo/line": "^0.61.1",
    "@nivo/pie": "^0.61.1",
    "@nivo/sunburst": "^0.61.0",
    "@siegrift/tsfunct": "^1.5.6",
    "classnames": "^2.2.6",
    "date-fns": "^2.9.0",
    "firebase": "^7.7.0",
    "lodash": "^4.17.15",
    "mathjs-expression-parser": "^1.0.2",
    "next": "9.1.6",
    "next-offline": "5.0.0-beta.8",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-google-button": "^0.7.0",
    "react-icons": "^3.8.0",
    "react-number-format": "^4.3.1",
    "react-redux": "^7.1.3",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@next/bundle-analyzer": "^9.2.1",
    "@testing-library/cypress": "^5.3.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/next": "^9.0.0",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-select": "^3.0.10",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.1",
    "@types/redux-logger": "^3.0.7",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "cypress": "^4.0.2",
    "cypress-testing-library": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-cypress": "^2.10.1",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "firebase-mock": "^2.3.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "majestic": "^1.6.2",
    "prettier": "1.19.1",
    "start-server-and-test": "^1.10.8",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  }
}
