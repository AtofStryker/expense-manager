{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "eofline": true,
    "semicolon": [true, "never"],
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "no-console": false,
    "member-access": false,
    "interface-over-type-literal": false,
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "never"
        },
        "singleline": "never"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-type-operator",
      "check-type",
      "check-rest-spread",
      "check-separator",
      "check-module",
      "check-decl",
      "check-typecast",
      "check-operator"
    ],
    "object-literal-key-quotes": [true, "as-needed"],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "arrow-parens": true,
    "jsx-boolean-value": [true, "never"],
    "jsx-no-lambda": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "lowercase-first",
        "grouped-imports": true
      }
    ],
    // NOTE: no-unused-variable is depracated in favour of checks in tsconfig, however
    // those cannot be automatically fixed, so I am keeping this for now.
    "no-unused-variable": true
  },
  "rulesDirectory": []
}
